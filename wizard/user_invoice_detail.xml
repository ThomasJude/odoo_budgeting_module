<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard  Form View  -->

        <record id="user_invoice_detail_tree" model="ir.ui.view">
		<field name="name">user.invoice.detail.tree</field>
		<field name="model">user.invoice.detail</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="User Invoice Detail" create="false" >
<!--                <field name="vendor_id"/>-->
                <field name="invoice_name"/>
                <field name="released" invisible="1"/>

                <field name="user_released" invisible="1"/>
                <field name="vendor_released" invisible="1"/>
                <field name="user_invoiced" invisible="1"/>
                <field name="vendor_invoiced" invisible="1"/>

                <field name="user_amount_released" sum="Total"/>
                <field name="user_amount_invoiced" sum="Total"/>
                <field name="bucket_type_id" />
                <field name="partial_due_amount" invisible="1"/>
                <field name="partial_paid_amount" invisible="1"/>
                <button name="show_detailed_items" type="object" class="btn btn-primary" string="show detailed items"/>

            </tree>
        </field>
        </record>


    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard  Form View  -->
        
        <record id="vendor_bill_detail_tree" model="ir.ui.view">
		<field name="name">vendor.bill.detail.tree</field>
		<field name="model">vendor.bill.detail</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">

			<tree string="Vendor Bill Detail" create="false" edit="false" duplicate="false">

                <field name="vendor_line_released_id" invisible="1"/>
                <field name="vendor_line_billed_id" invisible="1"/>
                <field name="vendor_line_released_from_user_bucket_id" invisible="1"/>
                <field name="bill_name" widget="many2onebutton"/>
                <field name="refund_bill_name"/>
                <field name="bill_paid" invisible="1"/>
                <field name="vendor_bill_amount_refunded" sum="Total" invisible="0"/>
                <field name="vendor_amount_paid" sum="Total"/>
                <field name="vendor_amount_bill" sum="Total"/>
                <field name="vendor_amount_due" sum="Total"/>
                <field name="vendor_id" invisible="1"/>
                <field name="debit" invisible="1"/>
                <field name="bucket_type_id"/>
                <field name="bucket_sub_type"/>
                <button name="see_payments" type="object" string="Payments" class="btn btn-primary"/>
                <button name="show_billed_items" type="object" class="btn btn-primary" string="Items"/>

            </tree>
        </field>
        </record>

        <!--        //////////////////////////////////////////////////////////////////////////////////-->
        <record id="view_account_payment_tree_custom" model="ir.ui.view">
		<field name="name">account.payment.tree.custom</field>
		<field name="model">account.payment</field>
		<field name="inherit_id" ref="account.view_account_payment_tree"/>
		<field name="arch" type="xml">
            <xpath expr="//tree/field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="create">0</attribute>
            </xpath>
        </field>
        </record>

<!--        //////////////////////////////////////////////////////////////////////////////////-->

<!--        //////////////////////////////////////////////////////////////////////////////////-->

        <record id="action_show_custom_payments" model="ir.actions.act_window">
            <field name="name">Payments</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="account.view_account_payment_tree"/>
            <field name="domain">[]</field>
<!--            <field name="context">{'default_move_type': 'entry', 'search_default_posted':1,'search_default_paid':1, 'view_no_maturity': True}</field>-->
            <!--            <field name="target">current</field>-->
        </record>


    </data>
</odoo>
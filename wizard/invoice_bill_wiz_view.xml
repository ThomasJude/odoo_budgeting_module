<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard  Form View  -->

        <record id="invoice_bill_wiz_form" model="ir.ui.view">
		<field name="name">invoice.bill.wiz.form</field>
		<field name="model">invoice.bill.wiz</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Invoice/Bill Visibility" create="false" edit="false" duplicate="false">
				<notebook>
					<page string="Invoice Details" name="inv_info_visibility">
                            <field name="inv_details_visibility_line" >
								<tree string="Invoice Details" create="false" edit="false" duplicate="false" delete="false">
	                                	<field name="invoice_name" widget="many2onebutton"/>
						                <field name="refunded_invoice_name" widget="many2onebutton"/>
						                <field name="released" invisible="1"/>
						                <field name="refunded_amount" readonly="1" force_save="1"/>
						                <field name="vendor_amount_released" sum="Total"/>
						                <field name="vendor_amount_invoiced" sum="Total"/>
						                <field name="user_released" invisible="1"/>
						                <field name="vendor_released" invisible="1"/>
						                <field name="user_invoiced" invisible="1"/>
						                <field name="vendor_invoiced" invisible="1"/>
						
						                <field name="bucket_type_id" />
						                <field name="partial_due_amount" invisible="1"/>
						                <field name="partial_paid_amount" invisible="1"/>
						                <button name="show_detailed_items" type="object" class="btn btn-primary" string="show detailed items"/>
						
                                </tree>
	                        </field>
						</page>
						
						
						<page string="Bill Details" name="bill_info_visibility">
                            <field name="bill_details_visibility_line" >
								<tree string="Bill Details" create="false" edit="false" duplicate="false" delete="false">
	                                	<field name="vendor_line_released_id" invisible="1"/>
						                <field name="bill_name" widget="many2onebutton"/>
						                <field name="bill_paid" invisible="1"/>
						                <field name="vendor_amount_bill" sum="Total"/>
						                <field name="vendor_amount_paid" sum="Total"/>
						
						                <field name="vendor_id" />
						                <field name="bucket_type_id" />
						
						                <button name="show_billed_items" type="object" class="btn btn-primary" string="Billed Items"/>
						
                                </tree>
	                        </field>
						</page>
				</notebook>

            </form>
        </field>
        </record>


    </data>
</odoo>
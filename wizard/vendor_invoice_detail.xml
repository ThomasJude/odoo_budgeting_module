<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard  Form View  -->

        <record id="vendor_invoice_detail_tree" model="ir.ui.view">
		<field name="name">vendor.invoice.detail.tree</field>
		<field name="model">vendor.invoice.detail</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Vendor Invoice Detail" create="false" edit="false" duplicate="false">
<!--                <field name="vendor_id"/>-->
                <field name="invoice_name" widget="many2onebutton"/>
                <field name="refunded_invoice_name" widget="many2onebutton"/>
                <field name="released" invisible="1"/>
                <field name="refunded_amount" readonly="1" force_save="1"/>
                <field name="vendor_amount_released" sum="Total"/>
                <field name="vendor_amount_invoiced" sum="Total"/>
                <field name="vendor_inv_amount" sum="Total"/>
                <field name="user_released" invisible="1"/>
                <field name="vendor_released" invisible="1"/>
                <field name="user_invoiced" invisible="1"/>
                <field name="vendor_invoiced" invisible="1"/>

                <field name="bucket_type_id" invisible="1"/>
                <field name="partial_due_amount" invisible="1"/>
                <field name="partial_paid_amount" invisible="1"/>
                <button name="see_payments" type="object" string="Payments" class="btn btn-primary"/>
                <button name="show_detailed_items" type="object" class="btn btn-primary" string="Items"/>

            </tree>
        </field>
        </record>


    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_bucket_tree" model="ir.ui.view">
            <field name="name">bucket.tree</field>
            <field name="model">bucket</field>
            <field name="arch" type="xml">
                <tree string="Bucket">
                    <field name="name" required="1"/>
                    <field name="bucket_type_id" required="1"/>
                    <!--<field name="user_type"/>-->
                  	<field name="bucket_amount"/>
                    <field name="bucket_status" required="1"/>
                </tree>
            </field>
        </record>

        <record id="view_bucket_form" model="ir.ui.view">
            <field name="name">bucket.form</field>
            <field name="model">bucket</field>
            <field name="arch" type="xml">
                <form string="Bucket Type">
					<header>
                    </header>
                    <sheet>
	                    <group>
	                        <group>
	                            <field name="name" required="1"/>
	                            <field name="bucket_type_id" required="1"/>
	                            <!--<field name="user_type"/>-->
	                            <field name="check" invisible="1"/>
	                            <field name="check2" invisible="1"/>
	                        </group>
	                        <group>
	                            <field name="bucket_amount" readonly="0"/>
	                            <field name="bucket_status" required="1"/>
							</group>
	                    </group>

	                    <notebook>
							<page string="Vendor Details" name="vendor_info" attrs="{'invisible':['|',('check','!=',True),('check2','!=',True)]}" >
                                <field name="vendor_line">
									<tree string="Vendor Line Invoiced" create="false" edit="false" duplicate="false" delete="false">
		                                <field name="vendor_id" domain="[('supplier_rank', '>', 0)]" readonly="1" options="{'no_edit': True, 'no_create': True}"/>
		                                <field name="total_amount_released" readonly="1" invisible="0"/>
		                                <field name="total_amount_invoiced" readonly="1" invisible="0" sum="Total Amount Invoiced"/>
		                                <field name="total_amount_billed" readonly="1" invisible="1"/>
		                                <field name="total_amount_billed_due" readonly="1" invisible="1"/>
<!--                                        <button name="fetch_vendor_invoiced_bill_inv_show" type="object" class="btn btn-link" icon="fa-eye-slash"/>-->
                                        <button name="fetch_vendor_bills_details" type="object" class="btn btn-primary" string="Show Invoices" />
                                    </tree>
		                        </field>
							</page>
                            <page string="Vendor Details" name="vendor_info" attrs="{'invisible':['|',('check','!=',True),('check2','!=',False)]}" >
                                <field name="vendor_line_released" >
									<tree string="Vendor Line Released" create="false" edit="false" duplicate="false" delete="false">
		                                <field name="vendor_id" domain="[('supplier_rank', '>', 0)]" readonly="1" options="{'no_edit': True, 'no_create': True}"/>
		                                <field name="total_amount_refunded" readonly="1" invisible="0"/>
		                                <field name="total_amount_released" readonly="1" invisible="0" sum="Total Amount Released"/>
		                                <field name="total_amount_invoiced" readonly="1" invisible="0"/>
		                                <field name="total_amount_billed" readonly="1" invisible="0" sum="Total Amount Billed"/>
		                                <field name="total_amount_billed_due" readonly="1" invisible="0"/>
		                                <field name="final_amount" readonly="1" invisible="0" decoration-danger="final_amount &lt; 0" decoration-bf="1"/>
<!--                                        <button name="fetch_vendor_bill_inv_show" type="object" class="btn btn-link" icon="fa-eye-slash"/>-->
                                        <button name="fetch_vendor_paid_bills_details" type="object" class="btn btn-primary" string="Show Invoices" />
                                        <button name="fetch_ven_bill_details" type="object" class="btn btn-primary" string="Show Bills" />
                                    </tree>
		                        </field>
							</page>
<!--                            ///////////////////-->
                            <page string="User Details" name="user_info" attrs="{'invisible':['|',('check','!=',False),('check2','!=',True)]}">
								<field name="user_line" >
									<tree string="User Line Invoiced" create="false" edit="false" duplicate="false" delete="false">
		                                <field name="user_id" readonly="1" options="{'no_edit': True, 'no_create': True}"/>
		                                <field name="total_amount_released" readonly="1" invisible="0"/>
		                                <field name="total_amount_invoiced" readonly="1" invisible="0"/>
		                                <field name="total_amount_billed" readonly="1" invisible="1"/>
		                                <field name="total_amount_billed_due" readonly="1" invisible="1"/>
<!--                                        <button name="fetch_user_invoiced_bill_inv_show" type="object" class="btn btn-link" icon="fa-eye-slash"/>-->
                                        <button name="fetch_user_bills_details" type="object" class="btn btn-primary" string="Show Invoices" />
                                    </tree>
		                        </field>
							</page>

<!--                            ///////////////////////-->

                            <page string="User Details" name="user_info" attrs="{'invisible':['|',('check','!=',False),('check2','!=',False)]}">
								<field name="user_line_released" >
									<tree string="User Line Released" create="false" edit="false" duplicate="false" delete="false">
		                                <field name="user_id" readonly="1" options="{'no_edit': True, 'no_create': True}"/>
		                                <field name="total_amount_refunded" readonly="1" invisible="0"/>
		                                <field name="total_amount_released" readonly="1" invisible="0" sum="Total Amount Released"/>
		                                <field name="total_amount_invoiced" readonly="1" invisible="0"/>
		                                <field name="total_amount_billed" readonly="1" invisible="1"/>
		                                <field name="total_amount_billed_due" readonly="1" invisible="1"/>
<!--                                        <button name="fetch_user_released_bill_inv_show" type="object" class="btn btn-link" icon="fa-eye-slash"/>-->
                                        <button name="fetch_user_paid_bills_details" type="object" class="btn btn-primary" string="Show Invoices" />
                                    </tree>
		                        </field>
							</page>


                            <page string="Vendor Details" name="vendor_info" attrs="{'invisible':['|','&amp;','|',('check','=',True),('check2','!=',False),('check','!=',False),('check2','!=',False)]}">
								<field name="vendor_line_released_inside_user" >
									<tree string="vendor Line Released" create="false" edit="false" duplicate="false" delete="false">
		                                <field name="vendor_id" readonly="1" options="{'no_edit': True, 'no_create': True}"/>
		                                <field name="total_amount_released" readonly="1" invisible="1"/>
		                                <field name="total_amount_invoiced" readonly="1" invisible="1"/>
										<field name="total_amount_refunded" readonly="1" invisible="0"/>
										<field name="total_amount_billed" readonly="1" invisible="0"/>
		                                <field name="total_amount_billed_due" readonly="1" invisible="0"/>
		                                <field name="final_amount" readonly="1" invisible="0" decoration-danger="final_amount &lt; 0" decoration-bf="1"/>
<!--                                        <button name="fetch_user_released_bill_inv_show" type="object" class="btn btn-link" icon="fa-eye-slash"/>-->
                                        <button name="fetch_ven_bills_details_inside_user" type="object" class="btn btn-primary" string="Show Bills" />
                                    </tree>
		                        </field>
							</page>
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bucket_form" model="ir.actions.act_window">
            <field name="name"> Bucket</field>
            <field name="res_model">bucket</field>
            <field name="view_mode">tree,form</field>
        </record>

		<menuitem name="Bucket" id="bucket_menu" parent="sale.sale_menu_root"
     		action="action_bucket_form"/>
     
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_bucket_tree" model="ir.ui.view">
            <field name="name">bucket.tree</field>
            <field name="model">bucket</field>
            <field name="arch" type="xml">
                <tree string="Bucket">
                    <field name="name" required="1"/>
                    <field name="bucket_type_id" required="1"/>
                    <!--<field name="user_type"/>-->
                  	<field name="bucket_amount"/>
                    
                    <field name="bucket_status" required="1"/>
                </tree>
            </field>
        </record>

        <record id="view_bucket_form" model="ir.ui.view">
            <field name="name">bucket.form</field>
            <field name="model">bucket</field>
            <field name="arch" type="xml">
                <form string="Bucket Type">
					<header>
                    </header>
                    <sheet>
	                    <group>
	                        <group>
	                            <field name="name" required="1"/>
	                            <field name="bucket_type_id" required="1"/>
	                            <!--<field name="user_type"/>-->
	                            
	                        </group>
	                        <group>
	                            <field name="bucket_amount"/>
	                            <field name="bucket_status" required="1"/>
							</group>
	                    </group>
	                    
	                    <notebook>
							<page string="Vendor Details" name="vendor_info">
								<field name="vendor_line" >
									<tree string="Vendor Line" editable="bottom">
		                                <field name="vendor_id" readonly="1" options="{'no_edit': True, 'no_create': True}"/>
		                                <button name="fetch_vendor_bills_details" type="object" class="btn btn-primary" string="Show Invoices"/>
                                    </tree>
		                        </field>
							</page>
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bucket_form" model="ir.actions.act_window">
            <field name="name"> Bucket</field>
            <field name="res_model">bucket</field>
            <field name="view_mode">tree,form</field>
        </record>

		<menuitem name="Bucket" id="bucket_menu" parent="sale.sale_menu_root"
     		action="action_bucket_form"/>
     
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_bucket_dashboard_tree" model="ir.ui.view">
            <field name="name">bucket.dashboard.tree</field>
            <field name="model">bucket.dashboard</field>
            <field name="arch" type="xml">
                <tree string="Bucket Dashboard" create="0" edit="0" delete="0">
                    <field name="bucket_type_id"/>
                    <field name="bucket_inv_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_bucket_dashboard_form" model="ir.ui.view">
            <field name="name">bucket.dashboard.form</field>
            <field name="model">bucket.dashboard</field>
            <field name="arch" type="xml">
                <form string="Bucket Type" create="0" edit="0" delete="0">
					<header>
						
                    </header>
                    <sheet>
						<div class="oe_button_box" name="button_box">
							<button type="object"
			                        name="action_view_bucket_invoices"
			                        class="oe_stat_button"
			                        icon="fa-pencil-square-o"
			                        attrs="{'invisible': [('bucket_inv_count', '=', 0)]}" >
			                        <field name="bucket_inv_count" widget="statinfo" string="Invoices"/>
			                    </button>
	                            
                            </div>
	                    <group>
	                        <group>
								<field name="bucket_type_id" />
	                            <field name="bucket_inv_ids" widget="many2many_tags"/>
	                        </group>
	                        <group>
							</group>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="search_bucket_dashboard">
        <field name="name">Bucket Dashboard Filter</field>
        <field name="model">bucket.dashboard</field>
        <field name="arch" type="xml">
            <search string="Bucket Dashboard  Filter">
                <!--<field name="name" string="Lot/Serial Number" filter_domain="['|', ('name', 'ilike', self),('ref', 'ilike', self)]"/>-->
                <field name="bucket_type_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_bucket_type_id" string="Bucket Type" domain="[]" context="{'group_by': 'bucket_type_id'}"/>
                    <filter name="group_by_bucket_inv_ids" string="Bucket Invoices" domain="[]" context="{'group_by': 'bucket_inv_ids'}"/>
                </group>
            </search>
        </field>
    </record>

        <record id="action_bucket_dashboard_form" model="ir.actions.act_window">
            <field name="name"> Bucket Dashboard</field>
            <field name="res_model">bucket.dashboard</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_bucket_dashboard"/>
            <field name="context">{'search_default_group_by_bucket_type_id': 1,'search_group_by_bucket_inv_ids': 1} </field>
         </record>

		<menuitem name="Bucket Dashboard" id="bucket_dashboard_menu" parent="sale.sale_menu_root"
     		action="action_bucket_dashboard_form"/>
     
    </data>
</odoo>